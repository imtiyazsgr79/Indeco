<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2"
    android:orientation="vertical"
    tools:context=".Workspace.WorkspaceActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_workspace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCodeSchemeApp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:menu="@menu/menu_dashboard"
        app:title="Workspaces"
        app:titleMargin="8dp"
        app:titleTextColor="#e2e2e2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_workspace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:orientation="vertical" />

</LinearLayout>